package Main

import Constants
import Waves
import ClosureTimers
import Infoboard
import PlayerHeroes

init
    // Debug
    let chaosgeneral = CreateUnitAtLoc(playerFromIndex(0), HERO_CHAOSGENERAL_ID, Location(500, 400), 0)
    chaosgeneral.addLevels(5, true)
    PlayerHeroes.add(chaosgeneral)

    // Waves stuff
    Waves.initialize()
    doPeriodically(20) (CallbackPeriodic cb) ->
        Waves.spawnNextWave(vec2(-1000, -1000), EASY)

    // Multiboard
    Infoboard.initialize()